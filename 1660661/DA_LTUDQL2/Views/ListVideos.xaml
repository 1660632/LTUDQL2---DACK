<UserControl x:Class="DA_LTUDQL2.Views.ListVideos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DA_LTUDQL2.Views"   
        xmlns:m="clr-namespace:DA_LTUDQL2.Models"
        mc:Ignorable="d"     
        FontSize="20"
        d:DesignHeight="180" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type m:VideoInfo}">
            <Grid Name="main" Width="300" Height="180">
                <Grid.LayoutTransform>
                    <ScaleTransform ScaleX="0.6" ScaleY="0.6"/>
                </Grid.LayoutTransform>
                <Image Stretch="Fill" Source="E:\HoangTrung\LTUDQL2\DemoTuan10\01.png"/>
                <Border BorderThickness="1" BorderBrush="OrangeRed" CornerRadius="2">
                    <StackPanel>
                        <TextBlock Text="{Binding Path=Title}"/>
                        <TextBlock Text="{Binding Path=Decription}"/>
                    </StackPanel>
                </Border>
            </Grid>
            <DataTemplate.Triggers>
                <Trigger Property="IsMouseOver"                                
                                 Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="main"
                                                         Storyboard.TargetProperty="LayoutTransform.ScaleX"
                                                         To="1"
                                                         Duration="0:0:0.3"/>
                                <DoubleAnimation Storyboard.TargetName="main"
                                                         Storyboard.TargetProperty="LayoutTransform.ScaleY"
                                                         To="1"
                                                         Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="main"
                                                         Storyboard.TargetProperty="LayoutTransform.ScaleX"
                                                         Duration="0:0:0.3"/>
                                <DoubleAnimation Storyboard.TargetName="main"
                                                         Storyboard.TargetProperty="LayoutTransform.ScaleY"
                                                         Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Label Name="lbnamelist"/>
        <StackPanel VerticalAlignment="Center">
        <ItemsControl ItemsSource="{Binding}"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.Template>
                <ControlTemplate TargetType="ItemsControl">
                    <Grid Name="main">
                        <Grid.LayoutTransform>
                            <ScaleTransform/>
                        </Grid.LayoutTransform>
                        <ScrollViewer Name="scrollViewer">
                            <ScrollViewer.Template>
                                <ControlTemplate TargetType="{x:Type ScrollViewer}">
                                    <Grid>
                                        <ScrollContentPresenter/>
                                    </Grid>
                                </ControlTemplate>
                            </ScrollViewer.Template>
                            <ItemsPresenter VerticalAlignment="Center"/>
                        </ScrollViewer>
                        <Grid>
                            <Grid.Resources>
                                <Style TargetType="{x:Type RepeatButton}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type RepeatButton}">
                                                <Grid>
                                                    <Border Width="{TemplateBinding Width}"
                                                        Height="{TemplateBinding Height}"
                                                        BorderThickness="1"
                                                        BorderBrush="AliceBlue"
                                                        Background="LightGray"
                                                        CornerRadius="2">
                                                        <Border.Effect>
                                                            <BlurEffect Radius="100"/>
                                                        </Border.Effect>
                                                    </Border>
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Grid>

                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <RepeatButton Command="{x:Static ScrollBar.LineLeftCommand}" 
                                          CommandTarget="{Binding ElementName=scrollViewer}"
                                          ClickMode="Hover"
                                          Grid.Column="0">
                                <Path VerticalAlignment="Center" HorizontalAlignment="Center"
                                      Fill="Black"
                                      Data="M 20 0 L 0 10 L 20 20 L 20 16 L 4 10 L 20 4 Z"/>

                            </RepeatButton>
                            <RepeatButton  Command="{x:Static ScrollBar.LineRightCommand}" 
                                           CommandTarget="{Binding ElementName=scrollViewer}"
                                           ClickMode="Hover"
                                           Grid.Column="2">
                                <Path VerticalAlignment="Center" HorizontalAlignment="Center"
                                      Fill="Black"
                                      Data="M 0 20 L 20 10 L 0 0 L 0 4 L 16 10 L 0 16 Z"/>
                            </RepeatButton>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </ItemsControl.Template>
        </ItemsControl>
    </StackPanel>
    </Grid>
</UserControl>
